<div class="container">
  <h1>My Badges</h1>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="<%= @achievements.count %>" aria-valuemin="0" aria-valuemax="<%= Badge.count %>" style="width: <%= @progress %>%;">
      <%= @progress %>% complete
    </div>
  </div>
  <h4><%= @achievements.count %> of <%= Badge.count %> badges earned.</h4>
  <div class="row">
    <% @achievements.each do |achievement| %>
      <div class="col-md-3 col-sm-4">
        <div class="thumbnail text-center">
          <%= achievement.badge.name %>
          <div class="caption text-center">
            <%= achievement.badge.description %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <h4>Here are the rest of the badges you can earn:</h4>
  <div class="row">
    <% @unearned_achievements.each do |badge| %>
    <div class="col-md-3 col-sm-4">
      <div class="thumbnail text-center">
        <%= badge.name %>  
        <div class="caption text-center">
            <%= badge.description %>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>