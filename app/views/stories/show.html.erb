<h1><%= @story.title %></h1>

<div class="row">
  <div class="col-md-8 text-justify">
    <p><%= @story.body.html_safe %></p>
  </div>
  <div class="col-md-4">
      <p><%= link_to "Edit", edit_story_path(@story), class: 'btn btn-success' %>
      <%= link_to "Delete", @story, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this story?'} %></p>
    <% if current_user %>
      <p><%= render partial: 'collections/collect', locals: { story: @story } %></p>
    <% end %>
  </div>
  <div class="col-md-8">

  </div>
</div>

<script>
$('document').ready(function() {
  setTimeout(function() {
    $('.alert').slideUp();
  }, 2000);
});
</script>