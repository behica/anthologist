<h1><%= @story.title %></h1>

<div class="row">
	<div class="col-md-8">
		<p><%= @story.body %></p>
	</div>
	<div class="col-md-4">
		<%= link_to "Edit", edit_story_path(@story), class: 'btn btn-success' %>
		<%= link_to "Delete", @story, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this story?'} %>
		<% if current_user %>
			<%= render partial: 'collections/collect', class: 'pull-right', locals: { story: @story } %>
		<% end %>
	</div>
</div>
