<h1>List of Stories</h1>
<div class="row">
  <% @stories.each do |story| %>
    <div class="col-md-3 col-sm-4">
      <div class="thumbnail">
        <%= link_to image_tag(story.cover.url(:thumb)), story %>
        <div class="caption text-center">
          <p><%= link_to story.title, story %></p>
          <% if current_user %>
            <p><%= render partial: 'collections/collect', class: 'pull-right', locals: { story: story } %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>