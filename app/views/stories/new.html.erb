<h1>New Story</h1>

<div class="row">
  <div class="col-md-4">
    <p>Story Guidelines</p>
  </div>
  <div class="col-md-8">
    <%= form_for @story do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Story title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Story text" %>
      </div>
      <div class="form-group">
        <%= f.label :genre %>
        <p>Select Genre (to be implemented)</p>
      </div>
      <div class="form-group">
        <%= f.label :published, class: 'checkbox-inline' do %>
          <%= f.check_box :published %><p class='bg-danger'> Publish - Story is submitted and cannot be edited! </p>
        <% end %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>   
  </div>
</div>