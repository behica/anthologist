<h1>My Collection</h1>
<div class="row">
<% if @user_collections.empty? %>
  <p>You have not added any items to your collection yet.</p>
<% else %>
  <% @user_collections.each do |collection| %>
    <div class="col-md-3 col-sm-4">
      <div class="thumbnail">
        <%= link_to image_tag("https://via.placeholder.com/125x200"), collection.story %>
        <div class="caption text-center">
          <%= link_to collection.story.title, collection.story %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>