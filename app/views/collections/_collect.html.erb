<% if user_signed_in? %>
  <% if collect = current_user.collection_check(story) %>
    <%= link_to [story, collect], class: 'btn btn-danger btn-xs', method: :delete do %>
      <span class="glyphicon glyphicon-heart"></span><span class="hidden-xs"> Collected</span>
    <% end %>
  <% else %>
    <%= link_to [story, Collection.new], class: 'btn btn-default btn-xs', method: :story do %>
      <span class="glyphicon glyphicon-heart-empty"></span><span class="hidden-xs"> Add to collection</span>
    <% end %>
  <% end %>
<% else %>
  <%= link_to [story, Collection.new], class: 'btn btn-default btn-xs', method: :story do %>
      <span class="glyphicon glyphicon-heart-empty"></span></span><span class="hidden-xs"> Add to collection</span>
    <% end %>
<% end %>